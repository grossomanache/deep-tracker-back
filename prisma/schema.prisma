datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Metric {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  name        String
  value       Float
  postedBy    User     @relation(name: "PostedBy", fields: [postedById], references: [id])
  postedById  Int
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  surname     String
  email       String   @unique
  password    String
  metrics     Metric[]    @relation(name: "PostedBy")
}
