datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Metric {
  id          Int      @id @default(autoincrement())
  name        String
  value       Float
  log         Log     @relation(name: "Metric",  fields: [logId], references: [id])
  logId       Int
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  surname     String
  email       String   @unique
  password    String
  logs        Log[]    @relation(name: "PostedBy")
}

model Log {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  postedBy    User     @relation(name: "PostedBy", fields: [postedById], references: [id])
  postedById  Int
  metrics     Metric[]  @relation(name: "Metric")
}
